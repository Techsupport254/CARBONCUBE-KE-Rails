# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/carbon_cube_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# Google Merchant Center API Configuration
GOOGLE_MERCHANT_ACCOUNT_ID=5662937973
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/your/service-account-key.json
GOOGLE_MERCHANT_SYNC_ENABLED=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security Configuration
SECRET_KEY_BASE=your_secret_key_base_here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Development Configuration
RAILS_ENV=development
RACK_ENV=development
# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google_oauth2/callback
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google_oauth2/callback
