# CarbonCube-KE Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Rails Configuration
RAILS_ENV=development
RAILS_MASTER_KEY=your_rails_master_key_here

# Cloudinary Configuration
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
UPLOAD_PRESET=your_upload_preset
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_ENV=sandbox_or_production

# Email Configuration (Brevo)
BREVO_EMAIL=your_email@domain.com
BREVO_SMTP_USER=your_smtp_user
BREVO_SMTP_PASSWORD=your_smtp_password

# Pilot Phase Configuration
PILOT_PHASE_ENABLED=false
REACT_APP_PILOT_PHASE_ENABLED=false
